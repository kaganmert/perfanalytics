{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": ".",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "__test__/*",
    "src/**/*",
    "server.ts",
    "src/swagger/swagger.json",
    "__test__/mockdb.ts",
    "__test__/metrics.test.ts"
  ]
}
